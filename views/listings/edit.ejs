<% layout("/layout/boilerplate.ejs") %>
<body>
    <div class="row">
        
        <div class="col-8 offset-2">
            <h2>Create a New Listing</h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" type="text" value="<%= listing.title %>" name="listing[title]" required>
            <div class="valid-feedback">Title looks Good</div>
        </div>
    
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <input class="form-control" value="<%= listing.description %>" name="listing[description]" required></textarea>
        </div>

        <div class="md-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>">
        </div>
      
        <div class="md-3">
            <label for="image" class="form-label">Image</label>
            <input class="form-control" type="file" name="listing[image]">
        </div>
        
        <div class="row">
            <div class="md-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input class="form-control" type="number" value="<%= listing.price %>" name="listing[price]" required>
            </div>
            <div class="md-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input class="form-control" type="text" value="<%= listing.country %>" name="listing[country]" required>
            </div>
        </div>
        
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input class="form-control" type="text" value="<%= listing.location %>" name="listing[location]" required>
        </div>
        <br><br>
        <button class="btn btn-outline-danger">Submit</button>
    </form>
    </div>
    </div>
</body>
